{% extends 'base.html.twig' %}

{% block title %}Hello ImageController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        @media (max-height: 680px) {
            .container{
                display: flex;
                flex-flow: column wrap;
            }
        }
    </style>

    <div class="container align-center mt-3">
        <h1 style="border-radius: 5px; text-align: center; background: #212529;">Liste d'images</h1>

        <div class="row" >
            {% for image in images %}
                <div class="col-3" style="display: flex;">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body" style="background: #212529">
                            <h5 class="card-title">{{ image.title }}</h5>
                            <p class="card-text">{{ image.description }}</p>
                            <a href="{{ path('image.show', {id: image.id, slug: image.slug}) }}" class="btn" style="background: #1a1a1a; color: #FFFFFF">View</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
